---
import Layout from '@layouts/Layout.astro';
import { VerseView } from './_components/VerseView';
import { listVerses } from '@lib/utils';

export function getStaticPaths() {
  return [
    {params: {slug: 'canto-5'}}
  ];
}

const { slug } = Astro.params;

const verse = listVerses().find(i => i.slug === slug)!;
---
<Layout title={`Verse | ${verse.title}`}>			
	<VerseView
		client:only="react" 
    verse={verse} />
</Layout>