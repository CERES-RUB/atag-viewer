---
import Layout from '@layouts/Layout.astro';
import { Header } from './_components/Header';

interface Props {
	title: string;
}

const { title } = Astro.props;
---
<Layout title={title}>
	<Header />

  <main>
    <div class="content">
		  <slot />
    </div>

    <div class="toc">
      <h2>Table of Contents</h2>
      <ul>
        <li>Chapter 1</li>
        <li>Chapter 2</li>
      </ul>
    </div>
	</main>
</Layout>

<style>
  :global(html, body) {
    min-height: 100%;
    background-color: #fff;
  }

  :global(body) {
    display: flex;
    flex-direction: column;
  }

  main {
    position: relative;
    display: flex;
    flex-grow: 1;
  }

  main .content {
    max-width: 80ch;
    padding: 30px 30px 80px 80px;
  }

  main .toc {
    align-self: flex-start;
    flex-shrink: 0;
    padding: 30px 40px;
    position: sticky;
    top: 30px;
  }

  main .toc h2 {
    font-size: 1.25rem;
  }

  main .toc ul {
    margin: 0;
    padding: 0 0 0 1.25rem;
  }
</style>