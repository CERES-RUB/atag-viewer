<style>
  :global(html, body) {
    min-height: 100%;
    background-color: #fff;
    scroll-padding-top: 4rem;
  }

  :global(body) {
    display: flex;
    flex-direction: column;
  }

  :global(figure) {
    margin: 0;
    padding: 1rem 0;
  }

  :global(figcaption) {
    font-weight: 600; 
    text-align: center;
  }

  main {
    position: relative;
    display: flex;
    flex-grow: 1;
  }

  main .content {
    max-width: 80ch;
    padding: 30px 30px 80px 80px;
  }

  main .toc {
    align-self: flex-start;
    flex-shrink: 0;
    padding: 30px 40px;
    position: sticky;
    top: 30px;
  }

  main .toc h2 {
    font-size: 1.25rem;
  }

  main .toc ul {
    margin: 0;
    padding: 0 0 0 1.25rem;
  }
</style>