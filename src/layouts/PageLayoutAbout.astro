import Layout from '@layouts/Layout.astro';
import { Header } from './_components/Header';
---
<Layout title="A-TAG | About">
	<Header />

  <main>
    <div class="content">
		  <slot />
    </div>

    <div class="toc">
      <h2>Table of Contents</h2>
      <ul>
        <li>
          <a href="#who-we-are">Who We Are</a>
        </li>
        <li>
          <a href="#what-it-does">What It Does</a>
        </li>
        <li>
          <a href="#why-aśvaghoṣa-and-gandhara">Why Aśvaghoṣa and Gandhara?</a>
        </li>
        <li>
          <a href="#development-and-methodology">Development and Methodology</a>
